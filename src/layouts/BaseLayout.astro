---
// src/layouts/BaseLayout.astro
const { title = 'Blog', description = 'A neon blog' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/styles/globals.css" />
    <!-- Memberstack script (placeholder: replace data-ms-site with your ID) -->
    <script
      defer
      src="https://api.memberstack.com/static/memberstack.js?custom"
      data-memberstack="true"
    ></script>
    <script>
      // Memberstack init hook example (replace with your Memberstack project snippet)
      window.memberstack = window.memberstack || function(){(window.memberstack.q=window.memberstack.q||[]).push(arguments)};
    </script>

    <!-- ConvertKit form embed (replace with your ConvertKit form script) -->
    <!-- Example inline script placeholder -->
    <script>
      // Add ConvertKit embed code here or inlined form HTML
      window.convertKit = window.convertKit || {};
    </script>
  </head>
  <body>
    <slot />
    <!-- Optional Memberstack client-side check / gating example -->
    <script>
      // Example to protect elements; real Memberstack config required.
      // document.querySelectorAll('[data-membership-required]').forEach(...)
    </script>
  </body>
</html>
